{
  "threads": 1,
  "log_level": "debug",
  "log_output": "stdout",
  "listening_port": 8081,


  "auth_sources" : {
    "ldap1":{
      "enabled": false,
      "method": "ldap",
      "basedn": "dc=example,dc=com",
      "binddn": "cn=read-only-admin,dc=example,dc=com",
      "port": "389",
      "host": "myserver",
      "bindpassword": "password",
      "filter": "(uid=%s)"
    }
  },

  "sources": {
    "gorm": {
      "dbname": "gorm.db",
      "engine": "sqlite"
    },
    "mysql": {
      "dbname": "test",
      "engine": "mysql",
      "host": "localhost",
      "port": "3306",
      "username": "test",
      "password": "test"
    },
    "catfact": {
      "url": "https://catfact.ninja/fact"
    }
  },

  "api": {
    "/test/api": {
      "type": "api",
      "source": "catfact",
      "method": "get",
      "target_method": "get",
      "restricted": true,
      "auth_source": "ldap1",
      "allowed_users": ["myuser"]
    },
    "/users": {
      "type": "sql",
      "source": "gorm",
      "method": "get",
      "query": "select * from users"
    },
    "/hosts": {
      "type": "sql",
      "source": "gorm",
      "method": "get",
      "query": "select * from hosts"
    },
    "/snmptrap": {
      "type": "snmptrap",
      "method": "get",
      "override": false,
      "source": {
        "override": true,
        "ip": "127.0.0.1"
      },
      "target": {
        "override": false,
        "ip": "127.0.0.1",
        "port": 162,
        "community": "public",
        "user": "user",
        "pass": "pass",
        "version": 3,
        "rootoid": ".1.3.6.1.4.1.3854.1",
        "specific_trap": 48
      },
      "data": {
        "override": true,
        "values":[
          {
            "oid": ".1.3.5.6.7",
            "value": "abc"
          },
          {
            "oid": ".1.3.5.6.8",
            "value": 33
          }
        ]
      }
    }
  }

}